<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.tab.UserProfileSurveyFragment">

    <FrameLayout
        android:id="@+id/userprofilesurveyFrame_Fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Verileriniz yükleniyor,\nlütfen bekleyiniz."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

    </FrameLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/userprofilesurveyWarning_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="Kullanıcı hesabı gizli ve siz\nonu takip etmiyorsunuz."
        android:textColor="@color/colorBlue"
        android:textSize="16sp"
        android:textStyle="italic" />

    <ListView
        android:id="@+id/userprofilesurveySurveys_Lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:scrollbars="vertical" />

</FrameLayout>