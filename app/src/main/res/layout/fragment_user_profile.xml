<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.profile.UserProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/userprofileLogout_Btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_exit_to_app_black_24dp" />

                <Button
                    android:id="@+id/userprofileEdit_Btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_edit" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userprofileUserimage_Iv"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userprofileUsername_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Kullanıcı Ad Soyad"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="110dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">

                        <TextView
                            android:id="@+id/userprofileFollowingNumber_Tv"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorBlue"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/userprofileFollowing_Btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginTop="35dp"
                            android:gravity="center"
                            android:text="Takip"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">

                        <TextView
                            android:id="@+id/userprofileFollowerNumber_Tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorBlue"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/userprofileFollower_Btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginTop="35dp"
                            android:gravity="center"
                            android:text="Takipçi"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">

                        <TextView
                            android:id="@+id/userprofileRequestNumber_Tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorBlue"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/userprofileRequest_Btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginTop="35dp"
                            android:gravity="center"
                            android:text="İstek"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </FrameLayout>


                </LinearLayout>


            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userprofileSurvey_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/userProfile_anketlerim_tv"
                        android:textColor="@color/colorGray" />

                    <TextView
                        android:id="@+id/userprofileSence_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/userProfile_sence"
                        android:textColor="@color/colorGray" />

                    <TextView
                        android:id="@+id/userprofileBence_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/userProfile_bence"
                        android:textColor="@color/colorGray" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/userprofileViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.viewpager.widget.ViewPager>

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>